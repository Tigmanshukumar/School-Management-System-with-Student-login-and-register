<%- include('partials/header') %>
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <%- include('partials/sidebar', { path: '/dashboard' }) %>

      <!-- Main Content -->
      <main class="flex-1 bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Student Dashboard</h1>

        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-blue-100 p-4 rounded-lg">
            <h2 class="text-xl font-semibold text-blue-700 mb-2">Teachers</h2>
            <p class="text-gray-600 mb-4">View all teachers and their assigned subjects.</p>
            <a href="/dashboard/teachers"
              class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded">
              View Teachers
            </a>
          </div>

          <div class="bg-green-100 p-4 rounded-lg">
            <h2 class="text-xl font-semibold text-green-700 mb-2">Subjects</h2>
            <p class="text-gray-600 mb-4">View all subjects and their assigned teachers.</p>
            <a href="/dashboard/subjects"
              class="inline-block bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded">
              View Subjects
            </a>
          </div>
        </div>

        <div class="mt-8 bg-yellow-100 p-4 rounded-lg">
          <h2 class="text-xl font-semibold text-yellow-800 mb-2">Your Account</h2>
          <div class="mt-4">
            <p class="mb-2"><span class="font-medium">Name:</span>
              <%= user.name %>
            </p>
            <p><span class="font-medium">Email:</span>
              <%= user.email %>
            </p>
          </div>
        </div>
      </main>
  </div>
  </div>
  <%- include('partials/footer') %>